<div class="profile_question_feed row">
	<div class="expanded_link">
	  <% if answer.content.length > 140 %>
	    <%= link_to_function truncate(wrap(answer.content), length: 140, omission: "... (click to expand)"), "$(this).parent().html('#{escape_javascript quick_answer.content}')", class: "expanded_link" %>
	  <% else %>
	  	<%= wrap(answer.content) %>
	  <% end %>
	</div>
	<span class="timestamp">
		Posted <%= time_ago_in_words(answer.created_at) %> ago.
	</span>
	<% if current_user?(answer.user) %>
		<%= link_to "delete", answer, method: :delete, data: { confirm: "Confirm to delete question."}, title: answer.content%>
	<% end %>
</div>